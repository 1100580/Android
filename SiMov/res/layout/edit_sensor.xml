<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

	    <TextView
	            android:id="@+id/ligado"
	            android:layout_width="75dp"
	            android:layout_height="wrap_content"
	            android:ems="10" 
	            android:text="Default">
	            <requestFocus />
	        </TextView>
	        
	   <Button
	        android:id="@+id/buttonLigado"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Default" />
	        
	    <TextView
	        android:id="@+id/limMin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Limite minimo de alerta" />
	
	    <EditText
	        android:id="@+id/limMinEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" />
	
	    <TextView
	        android:id="@+id/limMax"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Limite maximo de alerta" />
	
	    <EditText
	        android:id="@+id/limMaxEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" />
	    
	    <TextView
	        android:id="@+id/gps"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Distancia do GPS a casa" />
	
	    <EditText
	        android:id="@+id/gpsEdit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" />

	    <Button
	        android:id="@+id/buttonMudar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Mudar" />
    </LinearLayout>

</LinearLayout>
