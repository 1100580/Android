<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#830000" />
             <gradient  android:angle="-90"  android:startColor="#5f0000" android:endColor="#cb0000"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#830000" />
             <solid  android:color="#920000"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#830000" />
             <gradient  android:angle="-90"  android:startColor="#cb0000" android:endColor="#920000" />           
         </shape>
     </item>
</selector>